{% extends "base.jinja2" %}

{% block nav %}
    <li class="selected"><a href="/" >Journal</a></li>
    <li><a href="/new">New Entry</a></li>
    <li class="disabled"><a href="/edit">Edit Entry</a></li>
{% endblock %}      

{% block page_content %}
    <section id="entry-list">
    <ul>
        {%for entry in entries %}
            <li><div>
                <a href="/detail/{{entry.id}}"><p>{{ entry.created.strftime('%b. %d, %Y') }}:    {{entry.title}}</p></a>
            </li></div>
        {% endfor %}
    </ul>
    </section>
{% endblock %}
