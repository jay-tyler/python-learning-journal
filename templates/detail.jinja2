{% extends "base.jinja2" %}
{% block head %}
    {{ super() }}
    <link rel="stylesheet" href="/static/pygments_default.css" type="text/css">
{% endblock %}
{% block nav %}
    <li><a href="{{ request.route_url('home') }}">Journal</a></li>
    <li><a href="{{ request.route_url('new') }}">New Entry</a></li>
    <li><a href="{{ request.route_url('edit', id=article_id) }}">Edit Entry</a></li>
{% endblock %}        

{% block page_content %}
    <section id="detail-view">
        <h3>{{ created.strftime('%b. %d, %Y') }}: {{ title }}<h3>
        <p>{{ body_text|safe }}</p>          
    </section>
{% endblock %}