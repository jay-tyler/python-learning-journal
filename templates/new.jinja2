{% extends "base.jinja2" %}

{% block nav %}
      <li><a href="/">Journal</a></li>
      <li class="selected"><a href="/new">New Entry</a></li>
      <li class="disabled"><a href="/edit">Edit Entry</a></li>        
{% endblock %}    


{% block page_content %}
  <section id="edit-view">
      <form action="{{ request.route_url('add') }}" method='POST'>
          <p id="title-box">
              <label for="title">Title</label>
              <input id="title" name="title" type="text" value="">
          </p>
          <p id="post-box">
              <label for="body_text">Post</label>
              <textarea id="post-text" name="body_text" type="text"></textarea>
          </p>
          <div id="button">
               <input type="submit" name="Submit" value="add">
          </div>
      </form>
  </section>
{% endblock %}