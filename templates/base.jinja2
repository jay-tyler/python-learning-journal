<!DOCTYPE html>
<html>
  <head>
  {% block head %}
    <meta charset="utf-8">
    <link href='http://fonts.googleapis.com/css?family=Lato:300,400,700' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="/static/style.css" type="text/css">
    <title>Jason Tyler - Python Learning Journal</title>
  {% endblock %}
  </head>
  <body>
    <header>
        <div id="top-header">
            {% if request.authenticated_userid %}
                <p class="auth-link"><a href="{{ request.route_url("logout") }}">logout</a></p>
            {% else %}
                <p class="auth-link"><a href="/login">login</a></p>
            {% endif %}
            <h1 id='jay-name'>Jason Tyler</h1>
            <h1>Python Learning Journal</h1>
        </div>
        
        <div id="nav-header">
            <nav>
                <ul>
                {% block nav %}
                    <li class="selected"><a href="{{ request.route_url('home') }}" >Journal</a></li>
                    <li><a href="{{ request.route_url('new') }}">New Entry</a></li>
                    <li class="disabled"><a href="">Edit Entry</a></li>    
                {% endblock %}
                </ul>
            </nav>
        </div>
         
    </header>
    {% block err_message %}
        {% if err_msg %}
        <h2> {{ err_msg }} </h2>
        {% endif %}
    {% endblock %}

    {% block page_content %}
    {% endblock %}
    <footer>
          <p>&copy 2015 Jason Tyler.</p>
    </footer>
  </body>
</html>

